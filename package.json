{
  "name": "stemmer",
  "version": "1.0.2",
  "description": "Porter Stemmer algorithm",
  "license": "MIT",
  "keywords": [
    "martin",
    "porter",
    "stemmer",
    "algorithm",
    "cli",
    "bin"
  ],
  "homepage": "https://words.github.io/stemmer/",
  "repository": "words/stemmer",
  "bugs": "https://github.com/words/stemmer/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js",
    "cli.js"
  ],
  "bin": "cli.js",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "browserify": "^16.0.0",
    "esmangle": "^1.0.0",
    "execa": "^1.0.0",
    "nyc": "^13.0.0",
    "prettier": "^1.14.2",
    "remark-cli": "^5.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "tape": "^4.4.0",
    "tinyify": "^2.4.3",
    "xo": "^0.22.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s stemmer > stemmer.js",
    "build-mangle": "browserify . -s stemmer -p tinyify > stemmer.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "no-cond-assign": "off",
      "complexity": "off"
    },
    "ignores": [
      "stemmer.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
